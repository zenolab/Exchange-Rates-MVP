<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnails"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"

            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="106dp"
            android:layout_height="43dp"

            android:textStyle="bold"
            android:textColor="#000"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:layout_toEndOf="@+id/thumbnails"
            android:layout_toRightOf="@+id/thumbnails"
            android:lines="2"
            android:paddingTop="20dp"
            android:text="Name" />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2d63e1"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:text="Value" />

        <TextView
            android:id="@+id/tvRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d69e13"
            android:layout_alignStart="@+id/tvValue"
            android:layout_centerVertical="true"
            android:text="Round" />

        <TextView
            android:id="@+id/tvСhange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#494949"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:text="Сhange" />

    </RelativeLayout>

</android.support.v7.widget.CardView>